{
  "name": "giscus.app",
  "version": "0.0.0",
  "private": false,
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "scripts": {
    "cscript": "tsc client.ts --outDir public",
    "cthemes": "postcss styles/themes/*.css --dir public/themes --config styles/themes",
    "mscript": "google-closure-compiler < public/client.js --js_output_file public/client.js",
    "dev": "yarn cscript --watch --preserveWatchOutput & yarn cthemes --watch & next dev",
    "build": "yarn cscript && yarn cthemes && yarn mscript && next build",
    "start": "next start",
    "lint": "stylelint **/*.css && eslint . --cache",
    "lint:fix": "stylelint --fix **/*.css && eslint --fix . --cache",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@primer/octicons-react": "^17.4.1",
    "dompurify": "^2.3.10",
    "jsonwebtoken": "^8.5.1",
    "lit-html": "^2.3.1",
    "mathjax": "3.2.0",
    "next": "^12.2.5",
    "next-plugin-preact": "^3.0.7",
    "next-translate": "^1.5.0",
    "preact": "^10.10.6",
    "preact-render-to-string": "^5.2.2",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-ssr-prepass": "npm:preact-ssr-prepass",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.3.0",
    "@types/dompurify": "^2.3.3",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/node": "^16.11.51",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.8",
    "cssnano": "^5.1.13",
    "eslint": "^7.22.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "google-closure-compiler": "^20220803.0.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "stylelint": "^14.10.0",
    "stylelint-config-standard": "^27.0.0",
    "tailwindcss": "^3.1.8",
    "tailwindcss-vanilla-rtl": "^0.2.1",
    "typescript": "^4.7.4"
  }
}
